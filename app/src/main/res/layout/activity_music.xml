<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroud">

    <include layout="@layout/content_back"></include>
    <include layout="@layout/content_close"></include>
    <include layout="@layout/content_brightness"></include>
    <include layout="@layout/content_control"></include>

    <ListView
        android:id="@+id/musiclist"
        android:layout_marginRight="@dimen/content_padding_right"
        android:paddingBottom="30dp"
        android:paddingTop="80dp"
        android:layout_above="@id/control_zoom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>