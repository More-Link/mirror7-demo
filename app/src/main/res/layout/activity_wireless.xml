<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/root_padding"
    tools:context="com.morelink.mirror7.WirelessActivity">

    <Button
        android:layout_width="@dimen/action_btn_width"
        android:layout_height="@dimen/action_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="off"
        android:onClick="actionClose"
        tools:ignore="OnClick"></Button>

    <!-- Control -->
    <RelativeLayout
        android:id="@+id/control_zoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/control_up"
            android:layout_width="@dimen/action_btn_width"
            android:layout_height="@dimen/action_btn_height"
            android:text="UP"
            android:textSize="@dimen/control_fontsize"
            android:layout_centerHorizontal="true"
            ></Button>

        <Button
            android:id="@+id/control_enter"
            android:layout_width="@dimen/action_btn_width"
            android:layout_height="@dimen/action_btn_height"
            android:text="O"
            android:textSize="@dimen/control_fontsize"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/control_up"
            ></Button>

        <Button
            android:id="@+id/control_down"
            android:layout_width="@dimen/action_btn_width"
            android:layout_height="@dimen/action_btn_height"
            android:text="Down"
            android:textSize="@dimen/control_fontsize"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/control_enter"
            ></Button>

        <Button
            android:id="@+id/control_left"
            android:layout_width="@dimen/action_btn_width"
            android:layout_height="@dimen/action_btn_height"
            android:text="Left"
            android:textSize="@dimen/control_fontsize"
            android:layout_toLeftOf="@id/control_enter"
            android:layout_below="@id/control_up"
        ></Button>

        <Button
            android:id="@+id/control_right"
            android:layout_width="@dimen/action_btn_width"
            android:layout_height="@dimen/action_btn_height"
            android:text="Right"
            android:textSize="@dimen/control_fontsize"
            android:layout_toRightOf="@id/control_enter"
            android:layout_below="@id/control_up"
            ></Button>
    </RelativeLayout>

    <!-- Wifi List -->
    <!-- TODO Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="70dp"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_above="@id/control_zoom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wifi List"
            android:textSize="@dimen/weather_fontsize_big"
            android:textAlignment="center"
        />

        <ListView
            android:id="@+id/wifilist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="70dp"
        android:paddingBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/control_zoom">

        <LinearLayout
            android:id="@+id/layout_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SSID: "
                android:textAlignment="viewEnd"
                android:textSize="@dimen/weather_fontsize"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Morelink"
                android:textSize="@dimen/weather_fontsize"
                android:textAlignment="viewStart"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_ssid"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pwd: "
                android:textAlignment="viewEnd"
                android:textSize="@dimen/weather_fontsize"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="____________"
                android:textSize="@dimen/weather_fontsize"
                android:textAlignment="viewStart"
                android:layout_weight="1"/>
        </LinearLayout>
        <!-- Keyboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                Button*3
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Delete"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="space"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Connect"></Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
