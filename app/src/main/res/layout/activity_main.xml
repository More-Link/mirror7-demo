<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/root_padding"
    android:background="@color/backgroud"
    tools:context="com.morelink.mirror7.MainActivity">

    <Button
        android:id="@+id/action_open"
        android:layout_width="@dimen/action_btn_width"
        android:layout_height="@dimen/action_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/backgroud"
        android:text="@string/icon_open"
        android:textColor="@color/text"
        android:textSize="@dimen/action_fontsize"
        android:onClick="actionOpen"
    ></Button>

</RelativeLayout>
